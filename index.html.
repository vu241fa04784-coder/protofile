  <script>
   
    const steps = [
      {title:'Intro', html:'Hi — I am Sreeram. I like building small apps that solve daily problems. I am learning web & mobile development.'},
      {title:'Education', html:'Currently studying B.Tech (CSE). Interested in programming, data and web development.'},
      {title:'Skills', html:'C, Python, Java, HTML, CSS, JavaScript. Familiar with basic data structures and algorithms.'},
      {title:'Projects', html:'I build projects like an order app, expense tracker and small ML demos. See below for screenshots.'},
      {title:'Contact', html:'You can reach me via email or phone. I am open to internships and college projects.'}
    ];

    const stepEls = document.querySelectorAll('.step');
    const stepContent = document.getElementById('stepContent');
    let current = 0;

    function renderStep(i){
      current = i;
      stepEls.forEach(s=>s.classList.remove('active'));
      document.querySelector(`.step[data-step="${i}"]`).classList.add('active');
      stepContent.innerHTML = `<h3>${steps[i].title}</h3><p style="color:#444">${steps[i].html}</p>`;
      document.getElementById('prevBtn').disabled = i===0;
      document.getElementById('nextBtn').innerText = i===steps.length-1 ? 'Finish' : 'Next';
    }

    document.getElementById('startTour').addEventListener('click', ()=>{document.getElementById('about').scrollIntoView({behavior:'smooth'});renderStep(0)});
    document.getElementById('prevBtn').addEventListener('click', ()=>{if(current>0) renderStep(current-1)});
    document.getElementById('nextBtn').addEventListener('click', ()=>{if(current<steps.length-1) renderStep(current+1); else document.getElementById('projects').scrollIntoView({behavior:'smooth'})});

    stepEls.forEach(s=>s.addEventListener('click', ()=>renderStep(Number(s.dataset.step))));

    renderStep(0);

    const projects = {
      1:{title:'Brindavan Dairy App',desc:'Order app with product catalog, cart & admin dashboard.',img:'images/brindavan-dairy.png',live:'#',repo:'#'},
      2:{title:'Expense Tracker',desc:'PWA for logging expenses with charts and categories.',img:'images/expense-tracker.png',live:'#',repo:'#'},
      3:{title:'College Events Portal',desc:'Events listing and registration with roles.',img:'images/college-events.png',live:'#',repo:'#'},
      4:{title:'Image Classification',desc:'ML model demo using transfer learning and API.',img:'images/image-classification.png',live:'#',repo:'#'}
    };

    function openModal(id){
      const p = projects[id];
      if(!p) return;
      document.getElementById('modalImg').src = p.img;
      document.getElementById('modalTitle').innerText = p.title;
      document.getElementById('modalDesc').innerText = p.desc;
      document.getElementById('modalLive').href = p.live;
      document.getElementById('modalRepo').href = p.repo;
      document.getElementById('modal').classList.add('open');
      document.getElementById('modal').setAttribute('aria-hidden','false');
    }
    function closeModal(){document.getElementById('modal').classList.remove('open');document.getElementById('modal').setAttribute('aria-hidden','true');}
    document.addEventListener('keydown',(e)=>{if(e.key==='Escape')closeModal()});
    document.getElementById('modal').addEventListener('click',(e)=>{if(e.target===document.getElementById('modal'))closeModal();});
  </script>
